<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.fei.mapper.DictDataMapper">
    <resultMap type="com.example.fei.domain.DictData" id="DictDataResult">
        <id     property="dictCode"   column="dict_code"   />
        <result property="dictSort"   column="dict_sort"   />
        <result property="dictLabel"  column="dict_label"  />
        <result property="dictValue"  column="dict_value"  />
        <result property="dictType"   column="dict_type"   />
        <result property="isDefault"  column="is_default"  />
        <result property="status"     column="status"      />
        <!-- <result property="createBy"   column="create_by"   />
        <result property="createTime" column="create_time" />
        <result property="updateBy"   column="update_by"   />
        <result property="updateTime" column="update_time" /> -->
    </resultMap>

    <sql id="selectDictData">
        select * from dict_data
    </sql>

    <select id="selectDictTypeList" parameterType="com.example.fei.domain.DictData" resultMap="DictDataResult">
        <include refid="selectDictData"/>
        <where>
            <if test="dictType != null and dictType != ''">
                AND dict_type = #{dictType}
            </if>
            <if test="dictLabel != null and dictLabel != ''">
                AND dict_label like concat('%', #{dictLabel}, '%')
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
    </select>

    <select id="queryDictDataByType" parameterType="com.example.fei.domain.DictData" resultMap="DictDataResult">
        <include refid="selectDictData"/>
        where status = '0' and dict_type = #{dictType} order by dict_sort asc
    </select>

    <!--  detail 获取详情 -->
    <select id="selectDictDataById" parameterType="String" resultMap="DictDataResult">
        <include refid="selectDictData"/>
        where dict_code = #{dictCode}
    </select>


    <update id="updateByDictCode" parameterType="com.example.fei.domain.DictData">
        UPDATE dict_data
        <set>
            status=status+1
        </set>
        where dict_code in
        <foreach item="item" index="index" collection="dictCodes.split(',')"  open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>

    <update id="updateDictData" parameterType="com.example.fei.domain.DictData">
        update dict_data
        <set>
            <if test="dictSort != null">dict_sort = #{dictSort},</if>
            <if test="dictLabel != null and dictLabel != ''">dict_label = #{dictLabel},</if>
            <if test="dictValue != null and dictValue != ''">dict_value = #{dictValue},</if>
            <if test="dictType != null and dictType != ''">dict_type = #{dictType},</if>
            <if test="isDefault != null and isDefault != ''">is_default = #{isDefault},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            update_time = sysdate()
        </set>
        where dict_code = #{dictCode}
    </update>

    <insert id="insertDictData" parameterType="com.example.fei.domain.DictData">
        insert into dict_data(
            <if test="dictSort != null">dict_sort,</if>
            <if test="dictLabel != null and dictLabel != ''">dict_label,</if>
            <if test="dictValue != null and dictValue != ''">dict_value,</if>
            <if test="dictType != null and dictType != ''">dict_type,</if>
            <if test="isDefault != null and isDefault != ''">is_default,</if>
            <if test="status != null">status,</if>
            <if test="remark != null and remark != ''">remark,</if>
            create_time
        )values(
            <if test="dictSort != null">#{dictSort},</if>
            <if test="dictLabel != null and dictLabel != ''">#{dictLabel},</if>
            <if test="dictValue != null and dictValue != ''">#{dictValue},</if>
            <if test="dictType != null and dictType != ''">#{dictType},</if>
            <if test="isDefault != null and isDefault != ''">#{isDefault},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
            sysdate()
        )
    </insert>
</mapper>